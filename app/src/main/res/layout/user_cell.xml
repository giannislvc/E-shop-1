<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@android:color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_holder"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="#aaadc2"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/product_image_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/chat_image"/>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_holder"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="10dp"
        android:paddingEnd="0dp">

        <TextView
            android:id="@+id/product_name_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/breeze_sans_medium"
            android:maxLines="1"
            android:textSize="17sp"
            android:textColor="#3e4359"
            android:text="@string/test_product_name" />

        <TextView
            android:id="@+id/product_description_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/product_name_field"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/breeze_sans_regular"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="#6c7280"
            android:text="@string/test_product_description"/>

        <TextView
            android:id="@+id/product_price_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/product_views_field"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/breeze_sans_bold"
            android:textSize="15sp"
            android:textColor="#F7797A"
            android:text="@string/test_product_price" />

        <TextView
            android:id="@+id/product_views_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableStart="@drawable/ic_eye_black_18dp"
            android:fontFamily="@font/breeze_sans_regular"
            android:drawablePadding="3dp"
            android:textColor="#bbbcc0"
            android:text="@string/test_product_views"/>

        <TextView
            android:id="@+id/product_likes_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/product_views_field"
            android:drawableStart="@drawable/ic_favorite_black_18dp"
            android:fontFamily="@font/breeze_sans_regular"
            android:drawablePadding="3dp"
            android:textColor="#bbbcc0"
            android:text="@string/test_product_likes"/>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:button="@null"
            android:checked="false"
            android:background="@drawable/ic_favorite_gray_24dp"
            android:backgroundTint="@color/like_btn_color"
            android:stateListAnimator="@animator/scale"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>