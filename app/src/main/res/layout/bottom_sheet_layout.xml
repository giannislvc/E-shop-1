<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pictures_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="14sp"
        android:text="@string/pictures"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_image_black_24dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/breeze_sans_light"
        android:background="@drawable/bottom_gray_line_shape"/>

    <TextView
        android:id="@+id/take_photo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="14sp"
        android:text="@string/take_photo"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_photo_camera_black_24dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/breeze_sans_light"
        android:background="@drawable/bottom_gray_line_shape"/>

</LinearLayout>