<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="5dp">

    <ImageView
        android:id="@+id/product_image_holder"
        android:layout_width="167dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/chat_image"/>

    <TextView
        android:id="@+id/product_name_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/product_image_holder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/white"
        android:fontFamily="@font/breeze_sans_light"
        android:padding="2dp"
        android:textAlignment="center"
        android:background="#80595959"/>

    <TextView
        android:id="@+id/product_price_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/product_image_holder"
        app:layout_constraintStart_toStartOf="@id/product_image_holder"
        android:layout_marginTop="10dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:fontFamily="@font/breeze_sans_light"
        android:textColor="@android:color/white"
        android:background="#80595959"
        android:text="@string/test_product_price"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/product_views_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/product_image_holder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/product_likes_field"
        android:drawableStart="@drawable/ic_eye_black_18dp"
        android:drawableTint="@color/darkGray"
        android:fontFamily="@font/breeze_sans_regular"
        android:drawablePadding="3dp"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:text="@string/test_product_views"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/product_likes_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:drawableStart="@drawable/ic_favorite_black_18dp"
        android:drawablePadding="3dp"
        android:drawableTint="@color/darkGray"
        android:fontFamily="@font/breeze_sans_regular"
        android:text="@string/test_product_likes"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/product_views_field"
        app:layout_constraintTop_toTopOf="@id/product_views_field" />

    <TextView
        android:visibility="gone"
        android:id="@+id/product_description_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/product_views_field"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/breeze_sans_regular"
        android:maxLines="2"
        android:textSize="13sp"
        android:textColor="@color/darkGray"
        android:text="@string/test_product_description"/>

