<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".ui.main.settings.OptionsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sb_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bottom_gray_line_shape">

        <TextView
            android:id="@+id/sb_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sort_by"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/breeze_sans_light"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.4"/>

        <TextView
            android:id="@+id/selected_sb_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center_vertical|end"
            android:drawablePadding="20dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/breeze_sans_light"
            android:drawableEnd="@drawable/ic_chevron_right_gray_24dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/sb_label"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/c_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bottom_gray_line_shape">

        <TextView
            android:id="@+id/c_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/breeze_sans_light"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.4"/>

        <TextView
            android:id="@+id/selected_c_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center_vertical|end"
            android:drawablePadding="20dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/breeze_sans_light"
            android:drawableEnd="@drawable/ic_chevron_right_gray_24dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/c_label"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>