<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.main.settings.OptionsFragment">

    <TextView
        android:id="@+id/sort_by_cell"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/sort_by"
        android:padding="10dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/breeze_sans_light"
        android:drawableEnd="@drawable/ic_chevron_right_gray_24dp"
        android:background="@drawable/bottom_gray_line_shape"/>

    <TextView
        android:id="@+id/category_cell"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sort_by_cell"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/category"
        android:padding="10dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/breeze_sans_light"
        android:drawableEnd="@drawable/ic_chevron_right_gray_24dp"
        android:background="@drawable/bottom_gray_line_shape"/>

</androidx.constraintlayout.widget.ConstraintLayout>